<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="8.0.5" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="8.0.5" PrivateAssets="all" />
    <PackageReference Include="MudBlazor" Version="6.20.0" />
  </ItemGroup>

  <ItemGroup>
    <_ContentIncludedByDefault Remove="wwwroot\css\bootstrap\bootstrap.min.css" />
    <_ContentIncludedByDefault Remove="wwwroot\css\bootstrap\bootstrap.min.css.map" />
    <_ContentIncludedByDefault Remove="Pages\CreateCampaign.razor" />
  </ItemGroup>

  <ItemGroup>
    <Content Include=".github\workflows\main.yml" />
  </ItemGroup>

  <ItemGroup>
    <AdditionalFiles Include="Pages\Campaigns.razor" />
    <AdditionalFiles Include="Pages\CreateCampaign.razor" />
    <AdditionalFiles Include="Pages\UpdateCampaign.razor" />
  </ItemGroup>

</Project>
